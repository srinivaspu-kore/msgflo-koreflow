noflo = require '../../../../../src/lib/NoFlo'

module.exports = (loader, callback) ->
  loader.registerComponent 'example', 'Hello', ->
    c = new noflo.Component
    c.description = "Hello stuff"
    c.icon = 'bicycle'
    c.inPorts.add 'in',
      datatype: 'all'
    c.inPorts.add 'out',
      datatype: 'all'
    c.process = (input, output) ->
      data = input.getData 'in'
      output.sendDone
        out: data
    c
  callback null
